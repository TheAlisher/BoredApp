        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/Midnight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="category">
        <item name="android:textSize">12sp</item>
