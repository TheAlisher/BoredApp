<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/background_main</item>
        <item name="android:windowBackground">@color/Midnight</item>
        <item name="android:navigationBarColor">@color/NightBlueShadow</item>
        <item name="android:windowAnimationStyle">@style/LightDarkModeTransition</item>
    </style>

    <!--Splash Screen-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/ic_launcher_background</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/ic_launcher_background</item>
    </style>

    <!--Intro Activity Theme-->
    <style name="IntroTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/Madison</item>
    </style>

    <!--Text-->
    <style name="BaseText">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--Light / Dark Transition-->
    <style name="LightDarkModeTransition">
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_exit</item>
    </style>

    <!--Main Fragment / CardBored ListItem-->
    <style name="text_category">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="text_explore">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/main_text_explore</item>
    </style>

    <style name="text_free">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_text_free_price_participants</item>
    </style>

    <style name="text_price">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_text_free_price_participants</item>
    </style>

    <style name="text_accessibility">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_text_accessibility</item>
    </style>

    <style name="text_participants">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_text_free_price_participants</item>
    </style>

    <style name="button_open_link">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="text_link">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_next">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="text_price_accessibility">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <!--Settings Fragment-->
    <style name="SettingsMaterialCard">
        <item name="android:layout_margin">20dp</item>
        <item name="cardBackgroundColor">@color/settings_materialCard</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">20dp</item>
    </style>

    <style name="SettingsText">
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">@dimen/textSize_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsButton">
        <item name="android:background">@drawable/background_rounded_gradient</item>
        <item name="android:textColor">@color/settings_buttonText</item>
        <item name="android:textSize">@dimen/textSize_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- | BottomSheet -->
    <style name="BottomSheetImage">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="BottomSheetText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/bottomSheet_text</item>
        <item name="android:textSize">26sp</item>
    </style>


</resources>