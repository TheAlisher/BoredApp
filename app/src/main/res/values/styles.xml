<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/background_main</item>
        <item name="android:windowBackground">@color/Midnight</item>
        <item name="android:navigationBarColor">@color/NightBlueShadow</item>
        <item name="android:windowAnimationStyle">@style/LightDarkModeTransition</item>
    </style>

    Text
    <style name="BaseText">
        <item name="android:includeFontPadding">false</item>
    </style>

    Light / Dark Transition
    <style name="LightDarkModeTransition">
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_exit</item>
    </style>

    SplashScreen
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/ic_launcher_background</item>
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <item name="android:navigationBarColor">@color/ic_launcher_background</item>
    </style>

    IntroActivity Theme
    <style name="IntroTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/Madison</item>
    </style>

    Home Fragment
    <style name="text_category">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="text_explore">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/home_text_explore</item>
    </style>

    <style name="text_free">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/home_text_free_price_participants</item>
    </style>

    <style name="text_price">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/home_text_free_price_participants</item>
    </style>

    <style name="text_accessibility">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/home_text_accessibility</item>
    </style>

    <style name="text_participants">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/home_text_free_price_participants</item>
    </style>

    <style name="button_open_link">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="text_link">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="button_next">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="text_price_accessibility">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/White</item>
    </style>


</resources>