<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottomSheet_background"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/linear_bottomSheet_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_bottomSheet_share"
            style="@style/BottomSheetImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/contentDescription_bottomSheet_icon_share"
            android:src="@drawable/icon_share" />

        <TextView
            android:id="@+id/text_bottomSheet_share"
            style="@style/BottomSheetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bottomSheet_share" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bottomSheet_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_bottomSheet_link"
            style="@style/BottomSheetImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/contentDescription_bottomSheet_icon_link"
            android:src="@drawable/icon_link" />

        <TextView
            android:id="@+id/text_bottomSheet_link"
            style="@style/BottomSheetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bottomSheet_link" />

    </LinearLayout>


</LinearLayout>