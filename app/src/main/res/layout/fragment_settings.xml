<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation_ui.settings.SettingsFragment">

    <TextView
        android:id="@+id/text_settings_day_night_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_100dp"
        android:text="@string/text_settings_day_night"
        android:textAlignment="center"
        android:textColor="@color/textColorDefaultSettings"
        android:textSize="@dimen/textSize_20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_settings_day_night_mode"
        android:layout_width="@dimen/width_50dp"
        android:layout_height="@dimen/height_50dp"
        android:layout_marginTop="@dimen/marginTop_30dp"
        android:contentDescription="@string/contentDescription_settings_imageMode_day_night"
        android:src="@drawable/icon_mode_day_night"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_settings_day_night_mode" />

    <TextView
        android:id="@+id/text_settings_live_swipe_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_100dp"
        android:text="@string/text_settings_type_of_deletion"
        android:textAlignment="center"
        android:textColor="@color/textColorDefaultSettings"
        android:textSize="@dimen/textSize_20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/image_settings_day_night_mode" />

    <Button
        android:id="@+id/button_settings_type_of_deletion_choose"
        android:layout_width="@dimen/width_140dp"
        android:layout_height="@dimen/height_50dp"
        android:layout_marginTop="@dimen/marginTop_30dp"
        android:background="@color/buttonColorSettings"
        android:textColor="@color/textInButton"
        android:textSize="@dimen/textSize_20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_settings_live_swipe_data" />


</androidx.constraintlayout.widget.ConstraintLayout>